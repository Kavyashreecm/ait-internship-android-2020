<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.capulustech.myapplication">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".StudentRegistrationActivity"
            android:label="Student Registration"
            android:screenOrientation="portrait" />

        <activity
            android:name=".StudentListActivity"
            android:label="Students List"
            android:screenOrientation="portrait" />

        <activity
            android:name=".LocationActivity"
            android:label="Location"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ShareActivity"
            android:label="Share"
            android:screenOrientation="portrait" />

        <activity
            android:name=".TextToSpeechActivity"
            android:label="Text To Speech"
            android:screenOrientation="portrait" />

        <activity
            android:name=".VideoCaptureActivity"
            android:label="Video Capture"
            android:screenOrientation="portrait" />

        <activity
            android:name=".WebViewActivity"
            android:label="Web View"
            android:screenOrientation="portrait" />

        <activity
            android:name=".AadhaarActivity"
            android:label="Aadhaar Scanner"
            android:screenOrientation="portrait" />

        <activity
            android:name=".SpeechRecognitionActivity"
            android:label="Speech Recognition"
            android:screenOrientation="portrait" />

        <activity
            android:name=".LoginActivity"
            android:label="Internship">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>